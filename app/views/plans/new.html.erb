<h1>New Plan</h1>
<%= form_with model: @plan do |form| %>
  <div>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :"Monthly Fee" %><br>
    <%= form.number_field :monthly_fee, step: :any %>
  </div>
  <ul>
    <%= form.fields_for :features do |features_form| %>
      <li>
        <%= features_form.label :Name %>
        <%= features_form.text_field :name %>
        <%= features_form.label :Code %>
        <%= features_form.text_field :code %>
        <%= features_form.label :unit_price %>
        <%= features_form.text_field :unit_price %>
        <%= features_form.label :max_unit_limit %>
        <%= features_form.text_field :max_unit_limit %>  
      </li>
    <% end %>
  </ul>
  <div>
    <%= form.submit %>
  </div>
<% end %>
