<h1>Plans Index</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Monthly Price</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
    <tr>
      <th scope="row"><%= plan.id %></th>
      <td><%= plan.name %></td>
      <td><%= plan.monthly_fee %></td>
      <td> <%= link_to 'Features Details', plan_features_path(plan) %></td>
      <td> <%= link_to 'Subscribe', plan_features_path(plan) %></td>
      
    </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-danger"> <%= link_to 'Add New Plan', new_plan_path %></button>
