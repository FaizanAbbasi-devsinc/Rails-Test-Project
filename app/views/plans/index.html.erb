<h1>Plans Index</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Monthly Price</th>
      <th scope="col">Admin Id </th>
      <th scope="col"> Pay </th>

    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
    <tr>
      <th scope="row"><%= plan.id %></th>
      <td><%= plan.name %></td>
      <td><%= plan.monthly_fee %></td>
      <td><%= plan.user_id%></td>
      
      <td> <%= link_to 'Features Details', plan_features_path(plan) %></td>
      <td> <%= button_to 'Subscribe' , checkout_create_path, params: {id: plan.id}, remote: true %></td>
      
    </tr>
    <% end %>
  </tbody>
</table>

<button class="btn btn-danger"> <%= link_to 'Add New Plan', new_plan_path %></button>
