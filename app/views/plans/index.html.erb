<h1>Plans</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Monthly Price</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
    <tr>
      <th scope="row"><%= plan.id %></th>
      <td><%= plan.name %></td>
      <td><%= plan.monthly_fee %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>