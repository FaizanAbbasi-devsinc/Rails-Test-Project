<h1>Users </h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Admin Status</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
        <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td></td>
        </tr>
    </tbody>
  <% end %>
</table>

<br>

